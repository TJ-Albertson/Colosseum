<div class="grid-container">
  <main>
    <div class="profile-details">
      <%= image_tag "default_picture.jpg", class: "profile-pic" %> username
      <div class="profile-search">Search</div>
    </div>

    <div class="profile-search">
        <%= form_with url: "/search", method: :get do |form| %>
            <%= form.label :query, "Search for Movies:" %>
            <%= form.text_field :query %>
            <%= form.submit "Search" %>
        <% end %>
    </div>

    <div class="movies">
      <% @thumbs.each do |thumb| %>
        <div>
          <%= thumb.name %>
          <%= form_with model: @thumb do |form|%>
            <%= form.button :thumb %>
          <% end %>
        </div>
      <% end %>
    </div>
  </main>
</div>

<%= render "shared/menu" %>