<div class="grid-container">
  <main>
    <div class="profile-details">
      <%= image_tag "default_picture.jpg", class: "profile-pic" %> 
      <%= @user.username %>
      <div class="profile-search">
        <%= form_with url: "/search", method: :get do |form| %>
            <%= form.label :query, "Search:" %>
            <%= form.text_field :query %>
            <%= form.submit "Search" %>
        <% end %>
      </div>
    </div>

    <div class="movies">
      <% if @thumbs %>
        <% @thumbs.each do |thumb| %>
          <div>
            <%= thumb.name %>
              <%= form_with model: @thumb do |form|%>
              <%= form.button :thumb %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </main>
</div>

<%= render "shared/menu" %>